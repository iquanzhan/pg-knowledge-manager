<Window x:Class="MainApp.ShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        Icon="images/orange.png"
        WindowStartupLocation="CenterScreen"
        Title="ShowWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="10" LastChildFill="True">
            <DockPanel DockPanel.Dock="Top" Background="White">
                <Label x:Name="textTitle" Margin="0,5,0,5" Height="28" DockPanel.Dock="Left" FontSize="16"></Label>
            </DockPanel>
            <DockPanel DockPanel.Dock="Bottom"  Background="White">
                <Label DockPanel.Dock="Left">Copyright ©2018 做全栈攻城狮</Label>
                <Button x:Name="btnUpdate" DockPanel.Dock="Right" Width="50" HorizontalAlignment="Right" Margin="0,0,10,0" Click="btnUpdate_Click">更新</Button>
            </DockPanel>
            <TextBox x:Name="textContent" TextWrapping="Wrap"></TextBox>
        </DockPanel>
    </Grid>
</Window>

<Window x:Class="MainApp.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        Icon="images/orange.png"
        WindowStartupLocation="CenterScreen"
        Title="添加知识点" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="10" LastChildFill="True">
            <DockPanel DockPanel.Dock="Top" Background="White">
                <TextBox x:Name="textTitle" Margin="0,5,0,5" Height="28" DockPanel.Dock="Left" Width="600" FontSize="16" ></TextBox>
                <DockPanel DockPanel.Dock="Right" Margin="0,5,0,5">
                    <Button x:Name="btnAdd" Margin="10,0,0,0" DockPanel.Dock="Right" Click="btnAdd_Click">添加</Button>
                </DockPanel>
            </DockPanel>
            <Label DockPanel.Dock="Bottom" Background="White">Copyright ©2018 做全栈攻城狮</Label>
            <TextBox x:Name="textContent" AcceptsReturn="True" TextWrapping="WrapWithOverflow"></TextBox>
        </DockPanel>
    </Grid>
</Window>
